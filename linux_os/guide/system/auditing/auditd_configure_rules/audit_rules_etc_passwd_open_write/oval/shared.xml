<def-group>
  <definition class="compliance" id="audit_rules_etc_passwd_open_write" version="1">
    <metadata>
      <title>Configure </title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>check for audit rule when /etc/passwd is opened for writing</description>
    </metadata>
    <criteria>
        <criterion comment="audit rule for writes to /etc/passwd" test_ref="test_audit_rule_etc_passwd_open_write" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="audit rule for writes to /etc/passwd" id="test_audit_rule_etc_passwd_open_write" version="1">
    <ind:object object_ref="object_audit_rule_etc_passwd_open_write" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_audit_rule_etc_passwd_open_write" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\s*-w /etc/passwd -p wa -k account_mod\s*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
