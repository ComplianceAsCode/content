<def-group>
  <definition class="compliance" id="audit_rules_usr_bin_su_exec" version="1">
    <metadata>
      <title>Record Event When /usr/bin/su Gets Executed</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>check for audit rule when When /usr/bin/su Gets Executed</description>
    </metadata>
    <criteria>
        <criterion comment="audit rule 32 bit execution of /usr/bin/su" test_ref="test_audit_rule_usr_bin_su_exec_32" />
        <criterion comment="audit rule 64 bit execution of /usr/bin/su" test_ref="test_audit_rule_usr_bin_su_exec_64" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="audit rule 32 bit execution of /usr/bin/su" id="test_audit_rule_usr_bin_su_exec_32" version="1">
    <ind:object object_ref="object_audit_rule_usr_bin_su_exec_32" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rule_usr_bin_su_exec_32" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\s*-a always,exit -F -arch=b32 path=/usr/bin/su -F perm=x -F auid>=500 -F auid!=4294967295 -k privileged-priv_change\s*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="audit rule 64 bit execution of /usr/bin/su" id="test_audit_rule_usr_bin_su_exec_64" version="1">
    <ind:object object_ref="object_audit_rule_usr_bin_su_exec_64" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rule_usr_bin_su_exec_64" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\s*-a always,exit -F -arch=b64 path=/usr/bin/su -F perm=x -F auid>=500 -F auid!=4294967295 -k privileged-priv_change\s*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
