<def-group>
  <definition class="compliance" id="auditd_data_retention_space_left" version="2">
    <metadata>
      <title>Configure auditd space_left on Low Disk Space</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>space_left setting in /etc/audit/auditd.conf is set to at least a certain value</description>
    </metadata>

    <criteria>
        <criterion comment="space_left setting in auditd.conf" test_ref="test_auditd_data_retention_space_left" />
    </criteria>

  </definition>

  <!-- partition for the mount point for audit logs -->
  <linux:partition_object id="obj_adrsl_audit_partition" version="1">
    <linux:mount_point operation="equals">/var/log/audit</linux:mount_point>
  </linux:partition_object>
  <!-- total partition size in bytes -->
  <local_variable id="var_adrsl_audit_partition_size" comment="the total capacity (in bytes) of the partition for /var/log/audit" datatype="string" version="1">
    <arithmetic arithmetic_operation="multiply">
      <object_component item_field="block_size" object_ref="obj_adrsl_audit_partition" />
      <object_component item_field="total_space" object_ref="obj_adrsl_audit_partition" />
    </arithmetic>
  </local_variable>


  <ind:textfilecontent54_object id="object_auditd_data_retention_space_left" version="2">
    <ind:filepath>/etc/audit/auditd.conf</ind:filepath>
    <!-- Allow only space (exactly) as delimiter: https://fedorahosted.org/audit/browser/trunk/src/auditd-config.c#L426 -->
    <!-- Require at least one space before and after the equal sign -->
    <ind:pattern operation="pattern match">^[\s]*space_left[\s]+=[\s]+(\d+)[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <local_variable id="var_adrsl_audisp_space_left_min_partition_size" comment="4 times the value of the 'space_left' setting - the maximum size of the partition for /var/log/audit" datatype="string" version="1">
    <arithmetic arithmetic_operation="multiply">
      <object_component item_field="subexpression" object_ref="object_auditd_data_retention_space_left" />
      <literal_component datatype="int">4</literal_component>
    </arithmetic>
  </local_variable>
  <ind:variable_object id="obj_adrsl_audisp_space_left_min_partition_size" version="1">
    <ind:var_ref>var_adrsl_audisp_space_left_min_partition_size</ind:var_ref>
  </ind:variable_object>

  <ind:variable_test id="test_auditd_data_retention_space_left" version="1" check="all" check_existence="all_exist" comment="space_left setting in auditd.conf must be at least 1/4 of the partition storing audit logs">
    <ind:object object_ref="obj_adrsl_audisp_space_left_min_partition_size" />
    <ind:state state_ref="state_adrsl_partition_sufficiently_large" />
  </ind:variable_test>
  <ind:variable_state id="state_adrsl_partition_sufficiently_large" version="1">
      <ind:value operation="greater than or equal" datatype="int" var_ref="var_adrsl_audit_partition_size" var_check="all" />
  </ind:variable_state>

</def-group>
