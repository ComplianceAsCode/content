{{% if product in ["rhel7", "ol7"] %}}
{{% set audisp_conf_file = "/audispd.conf" %}}
{{% else %}}
{{% set audisp_conf_file = "/auditd.conf" %}}
{{% endif %}}

{{{ oval_check_config_file(
    path=audisp_conf_path + audisp_conf_file,
    prefix_regex="^[ \\t]*(?i)",
    parameter="name_format",
    value="(?i)hostname(?-i)",
    separator_regex="(?-i)[ \\t]*=[ \\t]*") }}}
