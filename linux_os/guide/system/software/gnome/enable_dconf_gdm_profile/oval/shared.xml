<def-group>
  <definition class="compliance" id="enable_dconf_gdm_profile" version="1">
    <metadata>
      <title>Implement Local DB for DConf GDM Profile</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 7</platform>
        <platform>Red Hat Enterprise Linux 8</platform>
        <platform>multi_platform_fedora</platform>
        <platform>multi_platform_ol</platform>
      </affected>
      <description>The DConf GDM profile should have the local DB configured.</description>
    </metadata>
    <criteria operator="OR">
      <extend_definition comment="dconf installed" definition_ref="package_dconf_installed" negate="true" />
      <criterion comment="dconf gdm profile exists" test_ref="test_dconf_gdm_profile" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="all_exist"
  comment="dconf gdm profile exists"
  id="test_dconf_gdm_profile" version="1">
    <ind:object object_ref="obj_dconf_gdm_profile" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_dconf_gdm_profile"
  version="2">
    <ind:filepath>/usr/share/dconf/profile/gdm</ind:filepath>
    <ind:pattern operation="pattern match">^user-db:user\nsystem-db:gdm\nsystem-db:local$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
