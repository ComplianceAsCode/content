<def-group>
  <definition class="compliance" id="ensure_rtc_utc_configuration" version="1">
    <metadata>
      <title>Ensure RTC is using UTC as its time base</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>Time stamps generated by the operating system include date and time. Time is commonly expressed
	           in UTC, a modern continuation of GMT, or local time with an offset from UTC.</description>
    </metadata>
    <criteria operator="AND">
      <criterion comment="Check /etc/adjtime is set to UTC" test_ref="test_ensure_rtc_utc_configuration" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="Ensures system RTC configured is using UTC" id="test_ensure_rtc_utc_configuration" version="1">
    <ind:object object_ref="object_ensure_rtc_utc_configuration" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_ensure_rtc_utc_configuration" version="1">
    <ind:filepath>/etc/adjtime</ind:filepath>
    <ind:pattern operation="pattern match">^UTC$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
