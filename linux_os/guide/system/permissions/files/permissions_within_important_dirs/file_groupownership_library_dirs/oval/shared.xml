<def-group>
  <definition class="compliance" id="file_groupownership_library_dirs" version="1">
    {{{ oval_metadata("
        Checks that system library in /lib, /lib64, /usr/lib, /usr/lib64, /lib/modules,
        are owned by root group.
      ") }}}
    <criteria>
      <criterion test_ref="test_groupownership_libraries_dirs" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist" comment="system library are owned by root" id="test_groupownership_libraries_dirs" version="1">
    <unix:object object_ref="object_groupownership_libraries_dirs" />
  </unix:file_test>

  <unix:file_object comment="system library files" id="object_groupownership_libraries_dirs" version="1">
    <!-- Check that libraries within directories /lib, /lib64, /usr/lib, /usr/lib64, /lib/modules,
         belong to group with gid 0 (root) -->
    <unix:path operation="pattern match">^\/lib(64|)|^\/usr\/lib(64|)|^/lib/modules</unix:path>
    <unix:filename operation="pattern match">^.*$</unix:filename>
   <filter action="include">state_groupowner_libraries_dirs_not_root</filter>
  </unix:file_object>

  <unix:file_state id="state_groupowner_libraries_dirs_not_root" version="1">
    <unix:group_id datatype="int" operation="not equal">0</unix:group_id>
  </unix:file_state>

</def-group>
