<def-group>
  <definition class="compliance" id="bios_enable_execution_restrictions" version="1">
    <metadata>
      <title>Enable NX or XD Support in the BIOS</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>
        Check if Execute Disable protection is active
      </description>
    </metadata>
    <criteria>
      <criterion comment="NX/XD (Execute Disable) protection: active" test_ref="test_bios_enable_execution_restrictions" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="none_exist"
  comment="NX/XD (Execute Disable) protection: active"
  id="test_bios_enable_execution_restrictions" version="1">
    <ind:object object_ref="object_bios_enable_execution_restrictions" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_bios_enable_execution_restrictions"
  comment="NX/XD (Execute Disable) protection: active"
  version="1">
    <ind:filepath>/var/log/messages</ind:filepath>
    <ind:pattern operation="pattern match">^.*(NX|XD)..Execute.Disable..protection..disabled.*$</ind:pattern>
    <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
