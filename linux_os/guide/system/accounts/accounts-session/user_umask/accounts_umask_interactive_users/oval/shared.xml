<def-group>
  <definition class="compliance" id="accounts_umask_interactive_users" version="1">
    <metadata>
      <title>Ensure the Default Umask is Set Correctly For Interactive Users</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>Remove the 'UMASK' environment variable from all interactive users initialization files.</description>
    </metadata>
    <criteria operator="OR">
      <criterion comment="check UMASK setting" test_ref="test_umask_logindefs" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist"
  comment="check UMASK setting" id="test_umask_logindefs" version="1">
    <ind:object object_ref="obj_umask_logindefs" />
    <ind:state state_ref="state_umask_077" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_umask_logindefs"
  version="1">
    <ind:filepath>/etc/login.defs</ind:filepath>
    <ind:pattern operation="pattern match">^UMASK\s+(\d+)$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_umask_077" version="1">
    <ind:subexpression datatype="string" operation="equals">077</ind:subexpression>
  </ind:textfilecontent54_state>
</def-group>
