<def-group oval_version="5.10">
  <definition class="compliance" id="file_permission_user_init_files" version="1">
    <metadata>
      <title>Ensure All User Initialization Files Have Mode 0740 Or Less Permissive</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>Ensure All User Initialization Files Have Mode 0740 Or Less Permissive</description>
    </metadata>
    <criteria operator="OR">
        <criterion comment="Check permissions of hidden files in home directory of interactive users" test_ref="test_file_permissions_user_init_files" />
    </criteria>
   </definition>

  <!-- we only care about interactive users (uid >= 1000) -->
  <unix:password_state id="state_file_permissions_user_init_files_is_interactive_user" version="1">
      <unix:user_id datatype="int" operation="greater than or equal">1000</unix:user_id>
  </unix:password_state>

  <!-- collect information about all interactive users -->
  <unix:password_object id="obj_file_permissions_user_init_files_passwd_list" version="1">
    <unix:username datatype="string" operation="pattern match">.*</unix:username>
    <filter action="include">state_file_permissions_user_init_files_is_interactive_user</filter>
  </unix:password_object>

  <!-- variable with all the home directories of interactive users -->
  <local_variable id="var_file_permissions_user_init_files_home_dir_list" comment="List of home directories of interactive users." datatype="string" version="1">
    <object_component item_field="home_dir" object_ref="obj_file_permissions_user_init_files_passwd_list" />
  </local_variable>

  <!-- collect file objects for every collected home directory  -->
  <unix:file_object comment="all hidden files in home directories of interactive users exist" id="obj_file_permissions_user_init_files_file_object_list" version="1">
    <unix:path var_check="at least one" var_ref="var_file_permissions_user_init_files_home_dir_list" />
    <unix:filename operation="pattern match">^\.</unix:filename>
  </unix:file_object>

  <!-- verify permissions -->
  <unix:file_state id="state_file_permissions_user_init_files_group_permissions" version="1">
      <unix:gwrite datatype="boolean">false</unix:gwrite>
      <unix:gexec datatype="boolean">false</unix:gexec>
  </unix:file_state>
  <unix:file_state id="state_file_permissions_user_init_files_other_permissions" version="1">
      <unix:oread datatype="boolean">false</unix:oread>
      <unix:owrite datatype="boolean">false</unix:owrite>
      <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>

  <unix:file_test
  check="all" check_existence="all_exist" comment="Check permissions of hidden files in home directory of interactive users"
  id="test_file_permissions_user_init_files" version="1">
    <unix:object object_ref="obj_file_permissions_user_init_files_file_object_list" />
    <unix:state state_ref="state_file_permissions_user_init_files_group_permissions" />
    <unix:state state_ref="state_file_permissions_user_init_files_other_permissions" />
  </unix:file_test>
</def-group>
