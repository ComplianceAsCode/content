<def-group>
    <definition class="compliance" id="cracklib_accounts_password_pam_minlen" version="4">
    <metadata>
      <title>Set Password Minimum Length</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>The pam_cracklib module's "minlen=" parameter controls requirements for
    the minimum length of a password.</description>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_cracklib_accounts_password_pam_minlen" comment="Verify minlen is set to the desired value" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test id="test_cracklib_accounts_password_pam_minlen"
  check="all" check_existence="all_exist"
  comment="Verify minlen configuation of pam_cracklib" version="1">
    <ind:object object_ref="object_cracklib_accounts_password_pam_minlen_line" />
    <ind:state state_ref="state_minlen" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_cracklib_accounts_password_pam_minlen_line" comment="Check minlen configuration of pam_cracklib" version="1">
    <ind:filepath>/etc/pam.d/common-password</ind:filepath>
    <ind:pattern operation="pattern match">^\s*password(?:(?!\n)\s)+requisite(?:(?!\n)\s)+pam_cracklib.so(?:(?!\n)\s[^\n]+)?(?!\n)\s+minlen=(\d+)(?:\s|$)</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>


  <ind:textfilecontent54_state id="state_minlen" version="1">
    <ind:subexpression operation="greater than or equal" var_ref="var_password_pam_minlen" datatype="int" />
  </ind:textfilecontent54_state>


  <external_variable comment="minimum password length" datatype="int" id="var_password_pam_minlen" version="1" />
</def-group>
