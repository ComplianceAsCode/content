<def-group>
    <definition class="compliance" id="cracklib_accounts_password_pam_difok" version="4">
    <metadata>
      <title>Set Password Strength Minimum Different Characters</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
      </affected>
      <description>The pam_cracklib module's "difok" parameter controls requirements for
    usage of different characters during a password change.</description>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_cracklib_accounts_password_pam_difok" comment="Verify difok is set to the desired value" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test id="test_cracklib_accounts_password_pam_difok"
  check="all" check_existence="all_exist"
  comment="Verify difok configuation of pam_cracklib" version="1">
    <ind:object object_ref="object_cracklib_accounts_password_pam_difok" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_cracklib_accounts_password_pam_difok" comment="Check difok configuration of pam_cracklib" version="1">
    <ind:filepath>/etc/pam.d/common-password</ind:filepath>
    <ind:pattern operation="pattern match">^\s*password(?:(?!\n)\s)+requisite(?:(?!\n)\s)+pam_cracklib.so((?!\n)\s[^\n]+)?(?!\n)\sdifok=[1-8](\s|$)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
