<def-group>
  <definition class="compliance" id="{{{ rule_id }}}" version="1">
    {{{ oval_metadata("All password change date is in the past.") }}}
    <criteria>
      <criterion comment="password change date is in the past"
                 test_ref="test_accounts_password_all_chage_in_past" negate="true"/>
    </criteria>
  </definition>

  <local_variable id="var_accounts_password_last_change_time_secs" datatype="int" version="1" comment="last change component of password entry">
    <time_difference format_2="seconds_since_epoch">
      <object_component object_ref="object_accounts_password_all_chage_in_past" item_field="chg_lst"/>
    </time_difference>
  </local_variable>

  <unix:shadow_test check="all" check_existence="at_least_one_exists" version="1"
                    id="test_accounts_password_all_chage_in_past"
                    comment="password change date in the past">
    <unix:object object_ref="object_accounts_password_all_chage_in_past"/>
  </unix:shadow_test>
  <unix:shadow_object id="object_accounts_password_all_chage_in_past" version="1">
    <unix:username operation="pattern match">.*</unix:username>
    <filter action="exclude">state_accounts_password_all_shadowed_has_no_password</filter>
  </unix:shadow_object>
  <unix:shadow_state id="state_accounts_password_all_chage_past_has_no_password" version="1">
      <unix:password operation="pattern match">^(!|!!|!\*|\*|!locked)$</unix:password>
  </unix:shadow_state>

</def-group>
