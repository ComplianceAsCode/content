<def-group>
  <definition class="compliance" id="no_empty_passwords" version="1">
    <metadata>
      <title>No nullok Option in PAM configuration</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The PAM configuration should not contain the nullok option</description>
    </metadata>
    <criteria>
      <criterion comment="make sure the nullok option is not used in PAM configuration" test_ref="test_no_empty_passwords" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="none_exist" comment="make sure nullok is not used in PAM configuration" id="test_no_empty_passwords" version="1">
    <ind:object object_ref="object_no_empty_passwords" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_no_empty_passwords" version="1">
    <ind:path>/etc/pam.d</ind:path>
    <ind:filename>.*</ind:filename>
    <ind:pattern operation="pattern match">\s*nullok\s*</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
