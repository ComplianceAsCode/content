  </local_variable>
{{% endif %}}


{{% if product in ["fedora", "rhel10"] %}}
  <ind:variable_state id="state_priv_cmds_from_augenrules_count_32bit" version="1">
    <ind:value datatype="int" operation="equals" var_check="at least one"
      var_ref="var_priv_cmds_from_augenrules_count_32bit"/>
  </ind:variable_state>
  <ind:variable_state id="state_priv_cmds_from_augenrules_count_64bit" version="1">
    <ind:value datatype="int" operation="equals" var_check="at least one"
      var_ref="var_priv_cmds_from_augenrules_count_64bit"/>
  </ind:variable_state>
  <ind:variable_state id="state_priv_cmds_from_augenrules_count_bootc_32bit" version="1">
    <ind:value datatype="int" operation="equals" var_check="at least one"
