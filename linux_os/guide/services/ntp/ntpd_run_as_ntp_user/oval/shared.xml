<def-group>
  <definition class="compliance" id="ntpd_run_as_ntp_user" version="1">
    {{{ oval_metadata("Ensure ntpd is configured to run correctly under the ntpsec user.") }}}
    <criteria operator="OR">
	    <criterion comment="check /etc/systemd/system/ntpd.service is configured correctly" test_ref="test_ntpd_run_as_ntp_user_etc" />
	    <criterion comment="check /usr/libexec/ntpsec/ntp-systemd-wrapper is configured correctly" test_ref="test_ntpd_run_as_ntp_user_systemd" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test id="test_ntpd_run_as_ntp_user_etc" version="1" check="all" comment="check /etc/systemd/system/ntpd.service">
    <ind:object object_ref="obj_ntpd_run_as_ntp_user_etc" />
  </ind:textfilecontent54_test>

    <ind:textfilecontent54_object id="obj_ntpd_run_as_ntp_user_etc"
	    version="1" comment="check /etc/systemd/system/ntpd">
    <ind:filepath>/etc/systemd/system/ntpd.service</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*OPTIONS=.*-u ntpsec:ntpsec.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>


  <ind:textfilecontent54_test id="test_ntpd_run_as_ntp_user_systemd" version="1" check="all" comment="check /usr/libexec/ntpsec/ntpsec/ntp-systemd-wrapper">
    <ind:object object_ref="obj_ntpd_run_as_ntp_user_systemd" />
  </ind:textfilecontent54_test>

    <ind:textfilecontent54_object id="obj_ntpd_run_as_ntp_user_systemd"
	    version="1" comment="check /usr/libexec/ntpsec/ntp-systemd-wrapper">
    <ind:filepath>/usr/libexec/ntpsec/ntp-systemd-wrapper</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*NTPD_OPTS=.*-u ntpsec:ntpsec.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
