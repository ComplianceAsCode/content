<def-group>
  <definition class="compliance" id="container_horizon_use_ssl" version="1">
    <metadata>
      <title>Is USE_SSL parameter set to True?</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>Is USE_SSL parameter set to True?</description>
    </metadata>
    <criteria comment="Is USE_SSL parameter set to True?" operator="AND">
      <criterion comment="Check USE_SSL in /var/lib/config-data/puppet-generated/horizon/etc/openstack-dashboard/local_settings" test_ref="test_container_horizon_use_ssl" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="none_exist"
  comment="Tests the value of the USE_SSL[\s]*(&lt;:nocomment:&gt;*) setting in the /var/lib/config-data/puppet-generated/horizon/etc/openstack-dashboard/local_settings file"
  id="test_container_horizon_use_ssl" version="1">
    <ind:object object_ref="obj_container_horizon_use_ssl" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_container_horizon_use_ssl" version="2">
    <ind:filepath>/var/lib/config-data/puppet-generated/horizon/etc/openstack-dashboard/local_settings</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*(?i)USE_SSL(?-i)[\s]+True[\s]*(?:#.*)?$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
