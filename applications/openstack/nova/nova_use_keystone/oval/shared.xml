<def-group>
  <definition class="compliance" id="nova_auth_strategy" version="1">
    <metadata>
      <title>Is auth_strategy parameter set to keystone?</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>Is auth_strategy parameter set to keystone?</description>
    </metadata>
    <criteria comment="Is auth_strategy parameter set to keystone?" operator="AND">
      <criterion comment="Check auth_strategy in /etc/nova/nova.conf" test_ref="test_nova_auth_strategy" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="none_exist"
  comment="Tests the value of the auth_strategy[\s]*(&lt;:nocomment:&gt;*) setting in the /etc/nova/nova.conf file"
  id="test_nova_auth_strategy" version="1">
    <ind:object object_ref="obj_nova_auth_strategy" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_nova_auth_strategy" version="2">
    <ind:filepath>/etc/nova/nova.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*(?i)auth_strategy(?-i)[\s]+keystone[\s]*(?:#.*)?$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
