<def-group oval_version="5.11">
  <definition class="compliance" id="ebs_encrypted_or_fips_enabled" version="1">
    {{{ oval_metadata("Full disk encryption should be enabled, either through EBS (AWS case) or using FIPS") }}}

    <criteria operator="OR">
      <extend_definition comment="ebs encryption enabled" definition_ref="ebs_encryption_enabled" />
      <criteria operator="AND">
        <extend_definition comment="fips mode enabled" definition_ref="fips_mode_enabled_on_all_nodes" />
        <extend_definition comment="luks encryption enabled" definition_ref="luks_enabled_on_all_nodes" />
      </criteria>
    </criteria>

  </definition>
</def-group>
