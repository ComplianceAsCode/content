<def-group>
  <definition class="compliance" id="kubelet_enable_iptables_util_chains" version="1">
    <metadata>
      <title>Configure the kubelet for Automatic Firewall Configuration</title>
      <affected family="unix">
        <platform>multi_platform_ocp</platform>
      </affected>
      <description>Enable the kubelet's ability to automatically configure the firewall.</description>
    </metadata>
    <criteria operator="AND">
      <criterion comment="Runtime configuration is correct" test_ref="test_ocp_runtime_make_iptables_util_chains" />
      <criterion comment="make-iptables-util-chains is configured" test_ref="test_kubelet_enable_iptables_util_chains" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="any_exist" comment="make-iptables-util-chains is configured" id="test_kubelet_enable_iptables_util_chains" version="1">
    <ind:object object_ref="object_kubelet_enable_iptables_util_chains" />
    <ind:state state_ref="state_kubelet_enable_iptables_util_chains" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_kubelet_enable_iptables_util_chains" version="1">
    <ind:filepath>/etc/origin/node/node-config.yaml</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*kubeletArguments\:(?:[^\n]*\n+)+?[\s]*make-iptables-util-chains\:[\s]*[\n]+[\s]*-[\s]+(\S+)[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_kubelet_enable_iptables_util_chains" version="1">
    <ind:subexpression datatype="string" operation="pattern match">^'true'$</ind:subexpression>
  </ind:textfilecontent54_state>
{{{ oval_ocp_service_runtime_config(command="/usr/bin/hyperkube kubelet", option="--make-iptables-util-chains", value="true", option_id="make_iptables_util_chains") }}}
</def-group>
