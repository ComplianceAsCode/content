<def-group>
  <definition class="compliance" id="etcd_client_cert_auth" version="1">
    <metadata>
      <title>Enable Client Certificate Authentication</title>
      {{{- oval_affected(products) }}}
      <description>Ensure OpenShift has enabled Client Certificate Authentication</description>
    </metadata>
    <criteria operator="AND">
      <criterion comment="ETCD_CLIENT_CERT_AUTH is enabled" test_ref="test_etcd_client_cert_auth" />
      <criterion comment="Runtime configuration is correct" test_ref="test_ocp_runtime_client_cert_auth" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="ETCD_CLIENT_CERT_AUTH is true" id="test_etcd_client_cert_auth" version="1">
    <ind:object object_ref="object_etcd_client_cert_auth" />
    <ind:state state_ref="state_etcd_client_cert_auth" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_etcd_client_cert_auth" version="1">
    <ind:filepath>/etc/etcd/etcd.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*ETCD_CLIENT_CERT_AUTH=(.*)$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_etcd_client_cert_auth" version="1">
    <ind:subexpression datatype="string" operation="pattern match">^true$</ind:subexpression>
  </ind:textfilecontent54_state>

  {{{ oval_ocp_service_runtime_config(command="etcd", option="--client-cert-auth", value="true", option_id="client_cert_auth") }}}
</def-group>
