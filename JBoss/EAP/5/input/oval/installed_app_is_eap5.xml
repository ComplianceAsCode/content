<def-group>
  <definition version="1" class="inventory" id="installed_app_is_eap5">
    <metadata>
      <title>JBoss Enterprise Application Platform 5</title>
      <description>EAP Version should be version 5</description>
      <affected family="undefined">
        <platform>JBoss Enterprise Application Platform 5</platform>
      </affected>
      <reference source="CPE" ref_id="cpe:/a:redhat:jboss_enterprise_application_platform:5.1.0" />
      <reference source="CPE" ref_id="cpe:/a:redhat:jboss_enterprise_application_platform:5.1.2" />
      <reference source="CPE" ref_id="cpe:/a:redhat:jboss_enterprise_application_platform:5.1.1" />
      <reference source="CPE" ref_id="cpe:/a:redhat:jboss_enterprise_application_platform:5.0.0" />
      <reference source="CPE" ref_id="cpe:/a:redhat:jboss_enterprise_application_platform:5.0.1" />     
    </metadata>
    <criteria>
      <criterion test_ref="test_installed_eap_version_5" />
    </criteria>
  </definition>

  <ind:environmentvariable58_object id="obj_env_installed_eap5_home" version="1">
    <ind:pid xsi:nil="true" datatype="int" />
    <ind:name>JBOSS_HOME</ind:name>
  </ind:environmentvariable58_object>

  <ind:textfilecontent54_test id="test_installed_eap_version_5" version="1" check="all" comment="Check EAP Version">
    <ind:object object_ref="obj_installed_eap_version_5" />
    <ind:state state_ref="state_installed_eap_version_5" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_installed_eap_version_5" version="1">
    <ind:path var_ref="local_var_installed_eap_version_5"/>
    <ind:filename>boot.log</ind:filename>
    <ind:pattern operation="pattern match">Release ID: JBoss \[EAP\] ([0-9\.]{3,5})</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="state_installed_eap_version_5" version="1">
    <ind:subexpression operation="pattern match">5\.(0|1)\.[0-2]+</ind:subexpression>
  </ind:textfilecontent54_state>

  <constant_variable comment="server profile OVAL content is run against" datatype="string" version="1" id="const_var_eap5_server_env">
    <value>production</value>
  </constant_variable>

  <local_variable id="local_var_installed_eap_version_5" version="1" datatype="string" comment="log location">
    <concat>
      <object_component object_ref="obj_env_installed_eap5_home" item_field="value" />
      <literal_component>/server/</literal_component>
      <variable_component var_ref="const_var_eap5_server_env"/>
      <literal_component>/log</literal_component>
    </concat>
  </local_variable>

</def-group>
