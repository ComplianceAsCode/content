# EditorConfig https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indentation_guess = true

[{*.py, *.yml, *.yaml, *.jinja}]
indent_style = space
indent_size = 4
