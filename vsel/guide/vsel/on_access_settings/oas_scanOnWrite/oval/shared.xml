<def-group>
  <definition class="compliance" id="oas_scanOnWrite" version="1">
    <metadata>
      <title>The McAfee VirusScan Enterprise for Linux  Web interface must be disabled unless the system is on a segregated network.</title>
      <affected family="unix">
        <product>McAfee VirusScan Enterprise for Linux</product>
      </affected>
      <description></description>
    </metadata>
    <!-- nailsd.profile.OAS.scanOnWrite is configured ... -->
    <criteria>
	  <criterion comment="Check nailsd.profile.OAS.scanOnWrite" test_ref="test_oas_scanOnWrite" />
	</criteria>
  </definition>
  
  <ind:textfilecontent54_test check="all" comment="Check nailsd.profile.OAS.scanOnWrite" id="test_oas_scanOnWrite" version="1">
    <ind:object object_ref="object_oas_scanOnWrite" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_oas_scanOnWrite" version="1">
    <ind:filepath>/var/opt/NAI/LinuxShield/etc/nailsd.cfg</ind:filepath>
    <ind:pattern operation="pattern match">^nailsd.profile.OAS.scanOnWrite: true$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  
</def-group>
