    <unix:state state_ref="state_20041" />
  </unix:file_test>
  <unix:file_state id="state_20041"
  version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/passwd"
  id="obj_20018" version="1">
