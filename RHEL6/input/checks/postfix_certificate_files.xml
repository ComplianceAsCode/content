<def-group>
  <definition class="compliance"
  id="postfix_certificate_files" version="1">
    <metadata>
      <title>Protect Postfix Certificate Files.</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <description>Protect LDAP certificate files.</description>
    </metadata>
    <criteria operator="AND">
      <criterion comment="Test key file ownership"            test_ref="test_postfix_certificate_files_key_owner" />
      <criterion comment="Test key file group ownership"      test_ref="test_postfix_certificate_files_key_gowner" />
      <criterion comment="Test key file permissions"          test_ref="test_postfix_certificate_files_key_perm" />
      <criterion comment="Test cert file ownership"           test_ref="test_postfix_certificate_files_cert_owner" />
      <criterion comment="Test cert file group ownership"     test_ref="test_postfix_certificate_files_cert_gowner" />
      <criterion comment="Test cert file permissions"         test_ref="test_postfix_certificate_files_cert_perm" />
      <criterion comment="Test pki directory ownership"       test_ref="test_postfix_certificate_files_pki_owner" />
      <criterion comment="Test pki directory group ownership" test_ref="test_postfix_certificate_files_pki_gowner" />
      <criterion comment="Test pki directory permissions"     test_ref="test_postfix_certificate_files_pki_perm" />
      <criterion comment="Test CA cert ownership"             test_ref="test_postfix_certificate_files_cacert_owner" />
      <criterion comment="Test CA cert group ownership"       test_ref="test_postfix_certificate_files_cacert_gowner" />
      <criterion comment="Test CA cert permissions"           test_ref="test_postfix_certificate_files_cacert_perm" />
    </criteria>
  </definition>
 

  <!--start key file-->
  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing ownership of private key file"
  id="test_postfix_certificate_files_key_owner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_key_owner" />
    <unix:state state_ref="state_postfix_certificate_files_key_owner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_key_owner" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/serverkey.pem" id="obj_postfix_certificate_files_key_owner" version="1">
    <unix:path>/etc/pki/tls/mail</unix:path>
    <unix:filename>serverkey.pem</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing group ownership of private key file"
  id="test_postfix_certificate_files_key_gowner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_key_gowner" />
    <unix:state state_ref="state_postfix_certificate_files_key_gowner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_key_gowner" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/serverkey.pem" id="obj_postfix_certificate_files_key_gowner" version="1">
    <unix:path>/etc/pki/tls/mail</unix:path>
    <unix:filename>serverkey.pem</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing permissions of private key file"
  id="test_postfix_certificate_files_key_perm" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_key_perm" />
    <unix:state state_ref="state_postfix_certificate_files_key_perm" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_key_perm" version="1">
    <unix:uread datatype="boolean">true</unix:uread>
    <unix:uwrite datatype="boolean">true</unix:uwrite>
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gread datatype="boolean">false</unix:gread>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:oread datatype="boolean">false</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/serverkey.pem"
  id="obj_postfix_certificate_files_key_perm" version="1">
    <unix:path>/etc/pki/tls/mail</unix:path>
    <unix:filename>serverkey.pem</unix:filename>
  </unix:file_object>
  <!--end key file -->

  <!--start cert file-->
  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing ownership of cert file"
  id="test_postfix_certificate_files_cert_owner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_cert_owner" />
    <unix:state state_ref="state_postfix_certificate_files_cert_owner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_cert_owner" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/servercert.pem" id="obj_postfix_certificate_files_cert_owner" version="1">
    <unix:path>/etc/pki/tls/mail</unix:path>
    <unix:filename>servercert.pem</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing group ownership of cert file"
  id="test_postfix_certificate_files_cert_gowner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_cert_gowner" />
    <unix:state state_ref="state_postfix_certificate_files_cert_gowner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_cert_gowner" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/servercert.pem" id="obj_postfix_certificate_files_cert_gowner" version="1">
    <unix:path>/etc/pki/tls/mail</unix:path>
    <unix:filename>servercert.pem</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing permissions of cert file"
  id="test_postfix_certificate_files_cert_perm" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_cert_perm" />
    <unix:state state_ref="state_postfix_certificate_files_cert_perm" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_cert_perm" version="1">
    <unix:uread datatype="boolean">true</unix:uread>
    <unix:uwrite datatype="boolean">true</unix:uwrite>
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gread datatype="boolean">true</unix:gread>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:oread datatype="boolean">true</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/servercert.pem"
  id="obj_postfix_certificate_files_cert_perm" version="1">
    <unix:path>/etc/pki/tls/mail</unix:path>
    <unix:filename>servercert.pem</unix:filename>
  </unix:file_object>
  <!-- end cert file -->


  <!-- start pki directory -->
  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing ownership of the  pki directory"
  id="test_postfix_certificate_files_pki_owner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_pki_owner" />
    <unix:state state_ref="state_postfix_certificate_files_pki_owner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_pki_owner" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/" id="obj_postfix_certificate_files_pki_owner" version="1">
    <unix:path>/etc/pki/tls</unix:path>
    <unix:filename>mail</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing group ownership of the pki directory"
  id="test_postfix_certificate_files_pki_gowner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_pki_gowner" />
    <unix:state state_ref="state_postfix_certificate_files_pki_gowner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_pki_gowner" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/" id="obj_postfix_certificate_files_pki_gowner" version="1">
    <unix:path>/etc/pki/tls</unix:path>
    <unix:filename>mail</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing permissions of the pki directory"
  id="test_postfix_certificate_files_pki_perm" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_pki_perm" />
    <unix:state state_ref="state_postfix_certificate_files_pki_perm" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_pki_perm" version="1">
    <unix:uread datatype="boolean">true</unix:uread>
    <unix:uwrite datatype="boolean">true</unix:uwrite>
    <unix:uexec datatype="boolean">true</unix:uexec>
    <unix:gread datatype="boolean">true</unix:gread>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">true</unix:gexec>
    <unix:oread datatype="boolean">true</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">true</unix:oexec>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/mail/"
  id="obj_postfix_certificate_files_pki_perm" version="1">
    <unix:path>/etc/pki/tls</unix:path>
    <unix:filename>mail</unix:filename>
  </unix:file_object>
  <!-- end pki directory -->


  <!-- start ca cert -->
  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing ownership of the ca cert"
  id="test_postfix_certificate_files_cacert_owner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_cacert_owner" />
    <unix:state state_ref="state_postfix_certificate_files_cacert_owner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_cacert_owner" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/CA/cacert.pem" id="obj_postfix_certificate_files_cacert_owner" version="1">
    <unix:path>/etc/pki/tls/CA</unix:path>
    <unix:filename>cacert.pem</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing group ownership of the ca cert file"
  id="test_postfix_certificate_files_cacert_gowner" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_cacert_gowner" />
    <unix:state state_ref="state_postfix_certificate_files_cacert_gowner" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_cacert_gowner" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/CA/cacert.pem" id="obj_postfix_certificate_files_cacert_gowner" version="1">
    <unix:path>/etc/pki/tls/CA</unix:path>
    <unix:filename>cacert.pem</unix:filename>
  </unix:file_object>

  <unix:file_test check="all" check_existence="all_exist"
  comment="Testing permissions of the ca cert file"
  id="test_postfix_certificate_files_cacert_perm" version="1">
    <unix:object object_ref="obj_postfix_certificate_files_cacert_perm" />
    <unix:state state_ref="state_postfix_certificate_files_cacert_perm" />
  </unix:file_test>
  <unix:file_state id="state_postfix_certificate_files_cacert_perm" version="1">
    <unix:uread datatype="boolean">true</unix:uread>
    <unix:uwrite datatype="boolean">true</unix:uwrite>
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gread datatype="boolean">true</unix:gread>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:oread datatype="boolean">true</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
  <unix:file_object comment="/etc/pki/tls/CA/cacert.pem"
  id="obj_postfix_certificate_files_cacert_perm" version="1">
    <unix:path>/etc/pki/tls/CA</unix:path>
    <unix:filename>cacert.pem</unix:filename>
  </unix:file_object>
  <!-- end ca cert -->

</def-group>
