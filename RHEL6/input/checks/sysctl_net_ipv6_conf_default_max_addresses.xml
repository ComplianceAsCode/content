    <unix:name>net.ipv6.conf.default.max_addresses</unix:name>
  </unix:sysctl_object>

  <unix:sysctl_state id="state_sysctl_net_ipv6_conf_default_max_addresses" version="1">
    <unix:value datatype="int" operation="equals">1</unix:value>
  </unix:sysctl_state>
</def-group>
