<def-group>
  <definition class="compliance" id="file_permissions_etc_at_allow" version="1">
    <metadata>
      <title>Verify /etc/at.allow Permissions</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="TODO" source="CCE" />
      <description>Checks for correct permissions on the /etc/at.allow file.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_permissions_etc_at_allow" />
    </criteria>
  </definition>
  <unix:file_test check="all" check_existence="at_least_one_exists" comment="/etc/at.allow file mode 0600" id="test_file_permissions_etc_at_allow" version="1">
    <unix:object object_ref="object_file_permissions_etc_at_allow" />
    <unix:state state_ref="state_mode_0600" />
  </unix:file_test>
  <unix:file_object comment="/etc/at.allow" id="object_file_permissions_etc_at_allow" version="1">
    <unix:path>/etc</unix:path>
    <unix:filename>at.allow</unix:filename>
  </unix:file_object>
  <unix:file_state id="state_mode_0600" version="1" operator="AND">
    <unix:suid datatype="boolean">false</unix:suid>
    <unix:sgid datatype="boolean">false</unix:sgid>
    <unix:sticky datatype="boolean">false</unix:sticky>
    <unix:uread datatype="boolean">true</unix:uread>
    <unix:uwrite datatype="boolean">true</unix:uwrite>
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gread datatype="boolean">false</unix:gread>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:oread datatype="boolean">false</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
</def-group>
