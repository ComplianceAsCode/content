<def-group>
  <definition class="compliance" id="chromium_disable_google_sync"  version="1">
    <metadata>
      <title>Disable Google Data Synchronization</title>
      <affected family="unix">
        <platform>Google Chromium Browser</platform>
      </affected>
      <description>Google Data Synchronization must be disabled.</description>
    </metadata>
    <criteria>
      <criterion comment="Chromium disable Google data sync" test_ref="test_chromium_disable_google_sync" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="Chromium disable Google data sync" id="test_chromium_disable_google_sync" version="1">
    <ind:object object_ref="object_chromium_disable_google_sync" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_chromium_disable_google_sync" version="1">
    <ind:filepath operation="pattern match">^/etc/chromium/policies/managed/.*\.json$</ind:filepath>
    <ind:pattern operation="pattern match">^\{([^\n]*\n+)+[\s]+\"SyncDisabled\"\:[\s]+true,</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
