<def-group>
  <definition class="inventory" id="installed_OS_is_debian_jessie" version="2">
    <metadata>
      <title>Debian 8</title>
      <affected family="unix">
        <platform>Debian Jessie</platform>
      </affected>
      <reference ref_id="cpe:/o:debian:debian:jessie" source="CPE" />
      <description>The operating system installed on the system is Debian 8 (Jessie)</description>
      <reference source="JL" ref_id="DEBIAN_JESSIE_20151210" ref_url="test_attestation" />
    </metadata>
    <criteria>
      <criterion comment="Installed operating system is part of the unix family" test_ref="test_unix_family" />
      <criterion comment="Debian8 is installed" test_ref="test_debian_jessie" />
    </criteria>
  </definition>

  <ind:family_test check="all" check_existence="at_least_one_exists" comment="installed OS part of unix family" id="test_unix_family" version="1">
    <ind:object object_ref="obj_unix_family" />
    <ind:state state_ref="state_unix_family" />
  </ind:family_test>
  <ind:family_state id="state_unix_family" version="1">
    <ind:family>unix</ind:family>
  </ind:family_state>
  <ind:family_object id="obj_unix_family" version="1" />

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check Debian version" id="test_debian_jessie" version="1">
    <ind:object object_ref="obj_debian_jessie" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_debian_jessie" version="1" comment="Check Debian version">
    <ind:filepath>/etc/debian_version</ind:filepath>
    <ind:pattern operation="pattern match">^8.[0-9]+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
