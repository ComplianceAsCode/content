<def-group>
  <definition class="compliance" id="service_chrony_or_ntp_enabled" version="1">
    <metadata>
      <title>Service chronyd Or Service ntpd Enabled</title>
      <affected family="unix">
        <platform>multi_platform_debian</platform>
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>At least one of the chrony or ntp services should be enabled if possible.</description>
    </metadata>

    <criteria comment="chrony or ntp service enabled" operator="OR">
      <extend_definition comment="service chrony enabled" definition_ref="service_chrony_enabled" />
      <extend_definition comment="service ntp enabled" definition_ref="service_ntp_enabled" />
    </criteria>

  </definition>
</def-group>
