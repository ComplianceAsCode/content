    nist: TBD
    srg: TBD
    stigid@rhel7: TBD

ocil_clause: 'selinuxuser_rw_noexattrfile is not enabled'

ocil: '<sebool-check-macro enable="false" sebool="selinuxuser_rw_noexattrfile" />'

