    nist: TBD
    srg: TBD
    stigid@rhel7: TBD

ocil_clause: 'postgresql_selinux_users_ddl is not enabled'

ocil: '<sebool-check-macro enable="true" sebool="postgresql_selinux_users_ddl" />'

oval_variables:
