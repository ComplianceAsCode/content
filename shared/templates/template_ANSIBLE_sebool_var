# platform = multi_platform_rhel, multi_platform_fedora, Fedora Rawhide
# reboot = false
# strategy = enable
# complexity = low
# disruption = low
- (xccdf-var var_{{{ SEBOOLID }}})

- name: Ensure libsemanage-python installed
  package:
    name: libsemanage-python
    state: latest

- name: Set SELinux boolean {{{ SEBOOLID }}} accordingly
  seboolean:
    name: {{{ SEBOOLID }}}
    state: "{{ var_{{{ SEBOOLID }}} }}"
    persistent: yes
  tags:
    @ANSIBLE_TAGS@

