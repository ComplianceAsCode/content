{{{ kubernetes_sshd_set() }}}
---
{{% if XCCDF_VARIABLE %}}
{{{ kubernetes_sshd_dropin(PARAMETER ~ ' {{.'~XCCDF_VARIABLE~'}}', config_basename='00-complianceascode-' ~ PARAMETER ~ '.conf') }}}
