# platform = multi_platform_all
# reboot = false
# strategy = disable
# complexity = low
# disruption = low


{{% if not EXISTS %}}
- name: Remove {{{ FILEPATH }}}
  ansible.builtin.file:
      path: {{{ FILEPATH }}}
      state: absent
{{% else %}}
- name: Add empty {{{ FILEPATH }}}
  ansible.builtin.file:
      path: {{{ FILEPATH }}}
      state: touch
    {{%- if FILEUID %}}
      owner: "{{{ FILEUID }}}"
    {{%- endif %}}
    {{%- if FILEMODE %}}
      mode: "{{{ FILEMODE }}}"
    {{%- endif %}}
{{% endif %}}
