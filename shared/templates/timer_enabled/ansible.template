# platform = multi_platform_all
# reboot = false
# strategy = enable
# complexity = low
# disruption = low
- name: Enable timer {{{ TIMERNAME }}}
  block:
  - name: Gather the package facts
    ansible.builtin.package_facts:
      manager: auto

  - name: Enable timer {{{ TIMERNAME }}}
    ansible.builtin.systemd:
      name: "{{{ TIMERNAME }}}.timer"
      enabled: "yes"
      state: "started"
    when:
    - '"{{{ PACKAGENAME }}}" in ansible_facts.packages'

