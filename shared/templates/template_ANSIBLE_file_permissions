# platform = multi_platform_all
# reboot = false
# strategy = configure
# complexity = low
# disruption = low
- name: Test for existence {{{ FILEPATH }}}
  stat:
    path: {{{ FILEPATH }}}
  register: file_exists
  
- name: Ensure permission {{{ FILEMODE }}} on {{{ FILEPATH }}}
  file:
    path: {{{ FILEPATH }}}
    mode: {{{ FILEMODE }}}
  when: file_exists.stat.exists
