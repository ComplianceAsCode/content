# platform = multi_platform_all
# reboot = false
# strategy = configure
# complexity = low
# disruption = low
- name: Test for existence {{{ FILEPATH }}}
  stat:
    path: {{{ FILEPATH }}}
  register: file_exists

- name: Ensure group owner {{{ FILEGID }}} on {{{ FILEPATH }}}
  file:
    path: {{{ FILEPATH }}}
    group: {{{ FILEGID }}}
  when: file_exists.stat.exists and @ANSIBLE_PLATFORM_CONDITION@
  tags:
    @ANSIBLE_TAGS@
