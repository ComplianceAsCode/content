<def-group>
  <definition class="inventory"
  id="installed_OS_is_debian9" version="2">
    <metadata>
      <title>Debian 9</title>
      <affected family="unix">
        <platform>Debian 9</platform>
      </affected>
      <reference ref_id="cpe:/o:debian:debian:9"
      source="CPE" />
      <description>The operating system installed on the system is
      Debian 9</description>
    </metadata>
    <criteria operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family"
      definition_ref="installed_OS_is_part_of_Unix_family" />
      <extend_definition comment="Installed OS is Debian"
      definition_ref="installed_OS_is_debian" />
      <criterion comment="Debian9 is installed"
      test_ref="test_debian9" />
    </criteria>
  </definition>

  <ind:textfilecontent54_object id="test_debian9" version="1" comment="Check Debian version">
    <ind:filepath>/etc/debian_version</ind:filepath>
    <ind:pattern operation="pattern match">^9.[0-9]+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
