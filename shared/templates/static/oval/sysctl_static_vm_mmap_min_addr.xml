<def-group>
  <definition class="compliance" id="sysctl_static_vm_mmap_min_addr" version="3">
    <metadata>
      <title>Kernel "vm.mmap_min_addr" Parameter Configuration Check</title>
      <affected family="unix">
        <platform>multi_platform_debian</platform>
        <platform>multi_platform_ubuntu</platform>
      </affected>
      <description>The kernel "vm.mmap_min_addr" parameter should be set to "65536" in the system configuration.</description>
    </metadata>
    <criteria operator="OR">
      <criterion comment="kernel static parameter vm.mmap_min_addr set to 65536 in /etc/sysctl.conf" test_ref="test_static_sysctl_vm_mmap_min_addr" />
      <!-- see sysctl.d(5) -->
      <criterion comment="kernel static parameter vm.mmap_min_addr set to 65536 in /etc/sysctl.d/*.conf" test_ref="test_static_etc_sysctld_vm_mmap_min_addr" />
      <criterion comment="kernel static parameter vm.mmap_min_addr set to 65536 in /run/sysctl.d/*.conf" test_ref="test_static_run_sysctld_vm_mmap_min_addr" />
      <criterion comment="kernel static parameter vm.mmap_min_addr set to 65536 in /usr/lib/sysctl.d/*.conf" test_ref="test_static_usr_lib_sysctld_vm_mmap_min_addr" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="vm.mmap_min_addr static configuration" id="test_static_sysctl_vm_mmap_min_addr" version="1">
    <ind:object object_ref="object_static_sysctl_vm_mmap_min_addr" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" comment="vm.mmap_min_addr static configuration in /etc/sysctl.d/*.conf" id="test_static_etc_sysctld_vm_mmap_min_addr" version="1">
    <ind:object object_ref="object_static_etc_sysctld_vm_mmap_min_addr" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" comment="vm.mmap_min_addr static configuration in /etc/sysctl.d/*.conf" id="test_static_run_sysctld_vm_mmap_min_addr" version="1">
    <ind:object object_ref="object_static_run_sysctld_vm_mmap_min_addr" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test check="all" comment="vm.mmap_min_addr static configuration in /etc/sysctl.d/*.conf" id="test_static_usr_lib_sysctld_vm_mmap_min_addr" version="1">
    <ind:object object_ref="object_static_usr_lib_sysctld_vm_mmap_min_addr" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_static_sysctl_vm_mmap_min_addr" version="1">
    <ind:filepath>/etc/sysctl.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*vm.mmap_min_addr[\s]*=[\s]*65536[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object id="object_static_etc_sysctld_vm_mmap_min_addr" version="1">
    <ind:path>/etc/sysctl.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*vm.mmap_min_addr[\s]*=[\s]*65536[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object id="object_static_run_sysctld_vm_mmap_min_addr" version="1">
    <ind:path>/run/sysctl.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*vm.mmap_min_addr[\s]*=[\s]*65536[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object id="object_static_usr_lib_sysctld_vm_mmap_min_addr" version="1">
    <ind:path>/usr/lib/sysctl.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*vm.mmap_min_addr[\s]*=[\s]*65536[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
