{{% if CHECK_ROOT_USER %}}
          <criterion comment="audit auditctl 64-bit {{{ ATTR }}}" test_ref="test_64bit_ardm_{{{ ATTR }}}_auditctl_auid_0" />
{{% endif %}}
        </criteria>
      </criteria>

    </criteria>
  </definition>

