    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="audit auditctls 64-bit lsetxattr" id="test_64bit_ardm_lsetxattr_auditctl" version="1">
