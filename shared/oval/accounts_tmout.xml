<def-group>
  <definition class="compliance" id="accounts_tmout" version="1">
    <metadata>
      <title>Ensure that Users Have Sensible TMOUT Values in /etc/profile</title>
      <affected family="unix">
        <platform>multi_platform_rhel</platform>
        <platform>multi_platform_fedora</platform>
      </affected>
      <description>The default umask for all users should be set correctly</description>
      <reference source="swells" ref_id="20160227" ref_url="test_attestation"/>
    </metadata>
    <criteria>
      <criterion test_ref="tst_accounts_tmout" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="the value TMOUT should be set appropriately in /etc/profile" id="test_accounts_tmout" version="1">
    <ind:object_ref="object_tmout_from_etc_profile" />
    <ind:state state_ref="state_accounts_tmout" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="obj_tmout_from_etc_profile" comment="TMOUT value from /etc/profile" version="1">
    <ind:filepath>/etc/profile</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*(?i)TMOUT(?-i)[\s]+([^#\s]*)</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_accounts_tmout" version="1">
    <ind:subexpression operation="greater than or equal" var_ref="var_accounts_tmout" datetype="int" />
  <ind:textfilecontent54_state>

  <external_variable id="var_accounts_tmout" datatype="string" version="1" comment="TMOUT from XCCDF profile" />

</def-group>
