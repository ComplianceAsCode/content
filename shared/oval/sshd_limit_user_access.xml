<def-group>
  <definition class="compliance" id="sshd_limit_user_access" version="1">
    <metadata>
      <title>Limit Users' SSH Access</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>At least AllowUsers, AllowGroups, DenyUsers or DenyGroups should be set</description>
    </metadata>
    <criteria comment="SSH is not being used or conditions are met"
    operator="OR">
      <extend_definition comment="sshd service is disabled"
      definition_ref="service_sshd_disabled" />
      <criterion comment="Check AllowUsers,AllowGroups,DenyUsers,DenyGroups in /etc/ssh/sshd_config"
      negate="true" test_ref="test_sshd_limit_user_access" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="none_exist"
  comment="Check if AllowUsers,AllowGroups,DenyUsers or DenyGroups is set in /etc/ssh/sshd_config"
  id="test_sshd_limit_user_access" version="1">
    <ind:object object_ref="obj_sshd_limit_user_access" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_sshd_limit_user_access" version="2">
    <ind:filepath>/etc/ssh/sshd_config</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*(AllowUsers|AllowGroups|DenyUsers|DenyGroups)\s+(\S\s*)+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
