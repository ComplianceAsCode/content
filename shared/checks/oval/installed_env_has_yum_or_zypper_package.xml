<def-group>
  <definition class="inventory"
  id="installed_env_has_yum_or_zypper_package" version="1">
    <metadata>
      <title>Package yum or zypper is installed</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>Checks if package yum or zypper is installed.</description>
      <reference ref_id="cpe:/a:yum_or_zypper" source="CPE" />
    </metadata>
    <criteria operator="OR">
      <criterion comment="Package yum is installed" test_ref="test_env_yumorzypper_has_yum_installed" />
      <criterion comment="Package zypper is installed" test_ref="test_env_has_zypper_installed" />
    </criteria>
  </definition>

{{% if pkg_system == "rpm" %}}
  <linux:rpminfo_test check="all" check_existence="at_least_one_exists"
  id="test_env_yumorzypper_has_yum_installed" version="1"
  comment="system has package yum installed">
    <linux:object object_ref="obj_env_yumorzypper_has_yum_installed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_env_yumorzypper_has_yum_installed" version="1">
    <linux:name>yum</linux:name>
  </linux:rpminfo_object>
  <linux:rpminfo_test check="all" check_existence="at_least_one_exists"
  id="test_env_has_zypper_installed" version="1"
  comment="system has package zypper installed">
    <linux:object object_ref="obj_env_has_zypper_installed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_env_has_zypper_installed" version="1">
    <linux:name>zypper</linux:name>
  </linux:rpminfo_object>
{{% elif pkg_system == "dpkg" %}}
  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_env_yumorzypper_has_yum_installed" version="1"
  comment="system has package yum installed">
    <linux:object object_ref="obj_env_yumorzypper_has_yum_installed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_env_yumorzypper_has_yum_installed" version="1">
    <linux:name>yum</linux:name>
  </linux:dpkginfo_object>
  <linux:dpkginfo_test check="all" check_existence="all_exist"
  id="test_env_has_zypper_installed" version="1"
  comment="system has package zypper installed">
    <linux:object object_ref="obj_env_has_zypper_installed" />
  </linux:dpkginfo_test>
  <linux:dpkginfo_object id="obj_env_has_zypper_installed" version="1">
    <linux:name>zypper</linux:name>
  </linux:dpkginfo_object>
{{% endif %}}

</def-group>
