<def-group>
  <definition class="inventory" id="installed_app_is_docker" version="1">
    <metadata>
      <title>Docker</title>
      <affected family="unix">
        <product>Docker</product>
      </affected>
      <reference ref_id="cpe:/a:docker:docker" source="CPE" />
      <description>The application installed on the system is the Docker container engine.</description>
    </metadata>
    <criteria operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family"
      definition_ref="installed_OS_is_part_of_Unix_family" />
      <criteria operator="OR">
        <criterion comment="Docker is installed" test_ref="test_docker_installed" />
      </criteria>
    </criteria>
  </definition>

  <linux:rpminfo_test check="all" check_existence="at_least_one_exists" comment="Docker is installed" id="test_docker_installed" version="1">
    <linux:object object_ref="obj_docker_installed" />
  </linux:rpminfo_test>

  <linux:rpminfo_object id="obj_docker_installed" version="1">
    <linux:name>docker</linux:name>
  </linux:rpminfo_object>
 
</def-group>
