<def-group>
  <definition class="compliance" id="java_jre_blacklist" version="1">
    <metadata>
      <title>Prevent the Download of Prohibited Mobile Code.</title>
      <affected family="unix">
        <product>Java Runtime Environment</product>
      </affected>
      <description>The setting for administrators to prevent the 
	  download of prohibited mobile code.</description>
    </metadata>
    <criteria>
      <criterion comment="Check deployment.security.blacklist.check" test_ref="test_java_jre_blacklist" />
      <criterion comment="Check deployment.security.blacklist.check.locked" test_ref="test_java_jre_blacklist_locked" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="Check deployment.security.blacklist.check" id="test_java_jre_blacklist" version="1">
    <ind:object object_ref="object_java_jre_blacklist" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_java_jre_blacklist" version="1">
    <ind:filepath>/etc/.java/deployment/deployment.properties</ind:filepath>
    <ind:pattern operation="pattern match">^deployment.security.blacklist.check=true$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="Check deployment.security.blacklist.check.locked" id="test_java_jre_blacklist_locked" version="1">
