<def-group>
  <definition class="compliance" id="firefox_preferences-telemetry"  version="1">
    <metadata>
      <title>Disable Firefox Telemetry Feature</title>
      <affected family="unix">
        <platform>Mozilla Firefox</platform>
      </affected>
      <description>The Firefox Telemetry feature should be disabled so that browsing information is not sent to Mozilla.
      </description>
    </metadata>
    <criteria>
      <criterion comment="telemetry disabled" test_ref="test_firefox_preferences-telemetry" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="Check for disabled telemetry" id="test_firefox_preferences-telemetry" version="1">
    <ind:object object_ref="object_firefox_preferences-pop-up_windows" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_firefox_preferences-telemetry" version="1">
    <ind:path operation="pattern match">^\/usr\/(|local\/)lib(|64)\/firefox</ind:path>
    <ind:filename operation="pattern match">^.*\.cfg$</ind:filename>
    <ind:pattern operation="pattern match">^lockPref\("toolkit.telemetry.enabled",[\s]+false\);$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
