<def-group>
  <definition class="compliance" id="java_jre_unsigned_applications" version="1">
    <metadata>
      <title>Disable Execution of Unsigned Applications</title>
      <affected family="unix">
        <product>Java Runtime Environment</product>
      </affected>
      <description>Configure setting to ensure that Java does not allow 
      unsigned applications to run.</description>
    </metadata>
    <criteria>
      <criterion comment="Check deployment.security.level" test_ref="test_java_jre_unsigned_applications" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="Check deployment.security.level" id="test_java_jre_unsigned_applications" version="1">
    <ind:object object_ref="object_java_jre_unsigned_applications" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_java_jre_unsigned_applications" version="1">
    <ind:filepath>/etc/.java/deployment/deployment.properties</ind:filepath>
   <ind:pattern operation="pattern match">^deployment.security.level=VERY_HIGH$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
