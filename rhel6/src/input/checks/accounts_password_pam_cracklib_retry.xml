<def-group>
  <definition class="compliance"
  id="accounts_password_pam_cracklib_retry" version="1">
    <metadata>
      <title>Set Password retry Requirements</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <reference ref_id="CCE-15054-0" source="CCE" />
      <description>The password retry should meet minimum
      requirements using pam_cracklib</description>
    </metadata>
    <criteria>
      <criterion comment="Conditions for retry are satisfied"
      test_ref="test_200781" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  comment="check the configuration of /etc/pam.d/system-auth"
  id="test_200781" version="1">
    <ind:object object_ref="obj_100002" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_100002"
  version="1">
    <ind:path>/etc/pam.d</ind:path>
    <ind:filename>system-auth</ind:filename>
    <ind:pattern operation="pattern match">^[\s]*password[\s]+(?:(?:required)|(?:requisite))[\s]+[\w_\.\-=\s]+[\s]retry=(3)(?:[\s]|$)</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">
    1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
