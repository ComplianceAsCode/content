<def-group>
  <definition class="compliance"
  id="accounts_password_pam_cracklib_ocredit" version="1">
    <metadata>
      <title>Set Password ocredit Requirements</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <reference ref_id="CCE-14122-6" source="CCE" />
      <description>The password ocredit should meet minimum
      requirements using pam_cracklib</description>
    </metadata>
    <criteria>
      <criterion comment="Conditions for ocredit are satisfied"
      test_ref="test_200785" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all"
  comment="check the configuration of /etc/pam.d/system-auth"
  id="test_200785" version="1">
    <ind:object object_ref="obj_100003" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_100003"
  version="1">
    <ind:path>/etc/pam.d</ind:path>
    <ind:filename>system-auth</ind:filename>
    <ind:pattern operation="pattern match">
    ^[\s]*password[\s]+(?:(?:required)|(?:requisite))[\s]+[\w_\.\-=\s]+[\s]ocredit=(-1)(?:[\s]|$)</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">
    1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
