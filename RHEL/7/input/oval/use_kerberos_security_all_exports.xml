<def-group>
  <definition class="compliance" id="use_kerberos_security_all_exports" version="2">
    <metadata>
      <title>Use Kerberos Security on All Exports</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 7</platform>
      </affected>
      <description>Using Kerberos Security allows to cryptography authenticate a
      valid user to an NFS share.</description>
      <reference source="JL" ref_id="20160411" ref_url="test_attestation" />
    </metadata>
    <criteria>
      <criterion comment="Check for Kerberos settings in /etc/exports"
      test_ref="test_use_kerberos_security_all_exports" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="all_exist"
  comment="Tests the value of the Kerberos Settings in /etc/exports"
  id="test_use_kerberos_security_all_exports" version="1">
    <ind:object object_ref="obj_use_kerberos_security_all_exports" />
    <ind:state state_ref="state_use_kerberos_security_all_exports" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_use_kerberos_security_all_exports"
  version="2">
    <ind:filepath>/etc/exports</ind:filepath>
    <ind:pattern operation="pattern match">^\/.*sec=(\S+).*$</ind:pattern>
    <ind:instance datatype="int" operation="not equal">0</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="state_use_kerberos_security_all_exports" version="1">
    <ind:subexpression operation="pattern match">^.*krb5\:krb5i\:krb5p.*$</ind:subexpression>
  </ind:textfilecontent54_state>
</def-group>
