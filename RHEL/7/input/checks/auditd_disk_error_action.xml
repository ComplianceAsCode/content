<def-group>
  <definition class="compliance" id="auditd_disk_error_action" version="1">
    <metadata>
      <title>Auditd Action to on Disk Error</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 7</platform>
      </affected>
      <description>disk_error_action setting in /etc/audit/auditd.conf is set to a certain action</description>
      <reference source="sdw" ref_id="20150428" ref_url="test_attestation" />
    </metadata>

    <criteria>
       <criterion comment="disk_error_action setting in auditd.conf" test_ref="test_auditd_disk_error_action" />
    </criteria>

  </definition>

  <ind:textfilecontent54_test check="all" comment="disk full action" id="test_auditd_disk_error_action" version="1">
    <ind:object object_ref="object_auditd_disk_error_action" />
    <ind:state state_ref="state_auditd_disk_error_action" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_auditd_disk_error_action" version="2">
    <ind:filepath>/etc/audit/auditd.conf</ind:filepath>
    <!-- Allow only space (exactly) as delimiter: https://fedorahosted.org/audit/browser/trunk/src/auditd-config.c#L426 -->
    <!-- Require at least one space before and after the equal sign -->
    <ind:pattern operation="pattern match">^[ ]*disk_error_action[ ]+=[ ]+(\S+)[ ]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_auditd_disk_error_action" version="1">
    <ind:subexpression operation="case insensitive equals" var_ref="var_auditd_disk_error_action" />
  </ind:textfilecontent54_state>

  <external_variable comment="audit disk_error_action setting" datatype="string" id="var_auditd_disk_error_action" version="1" />

</def-group>
