<def-group>
  <definition class="compliance" id="mount_option_dev_shm_nodev" version="1">
    <metadata>
      <title>Add nodev Option to /dev/shm</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <description>Legitimate character and block devices should not exist
      within temporary directories like /dev/shm. The nodev mount option should
      be specified for /dev/shm.</description>
      <reference source="galford" ref_id="20141113" ref_url="test_attestation" />
    </metadata>
    <criteria operator="AND">
      <criterion comment="runtime nodev on /dev/shm" test_ref="test_runtime_nodev_dev_shm" />
      <criterion comment="persistent nodev on /dev/shm" test_ref="test_persistent_nodev_dev_shm" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_runtime_nodev_dev_shm" version="1" comment="nodev on /dev/shm">
    <linux:object object_ref="object_dev_shm_partition_nodev" />
    <linux:state state_ref="state_dev_shm_nodev" />
  </linux:partition_test>
  <linux:partition_object id="object_dev_shm_partition_nodev" version="1">
    <linux:mount_point>/dev/shm</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_dev_shm_nodev" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">nodev</linux:mount_options>
  </linux:partition_state>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="persistent check"
  id="test_persistent_nodev_dev_shm" version="1">
    <ind:object object_ref="object_persistent_nodev_dev_shm" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_persistent_nodev_dev_shm" version="1">
    <ind:filepath>/etc/fstab</ind:filepath>
    <ind:pattern operation="pattern match">^.*/dev/shm.*nodev.*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
