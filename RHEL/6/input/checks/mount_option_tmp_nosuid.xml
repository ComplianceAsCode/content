<def-group>
  <definition class="compliance" id="mount_option_tmp_nosuid" version="1">
    <metadata>
      <title>Add nosuid Option to /tmp</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <description>The nosuid mount option should be set for temporary storage
      partitions such as /tmp. The suid/sgid permissions should not be required
      in these world-writable directories.</description>
      <reference source="galford" ref_id="20141113" ref_url="test_attestation" />
    </metadata>
    <criteria operator="AND">
      <criterion comment="runtime nosuid on /tmp" test_ref="test_runtime_nosuid_tmp" />
      <criterion comment="persistent nosuid on /tmp" test_ref="test_persistent_nosuid_tmp" />
    </criteria>
  </definition>
  <linux:partition_test check="all" check_existence="all_exist"
  id="test_runtime_nosuid_tmp" version="1" comment="nosuid on /tmp">
    <linux:object object_ref="object_tmp_nosuid_partition" />
    <linux:state state_ref="state_tmp_nosuid" />
  </linux:partition_test>
  <linux:partition_object id="object_tmp_nosuid_partition" version="1">
    <linux:mount_point>/tmp</linux:mount_point>
  </linux:partition_object>
  <linux:partition_state id="state_tmp_nosuid" version="1">
    <linux:mount_options datatype="string" entity_check="at least one"
    operation="equals">nosuid</linux:mount_options>
  </linux:partition_state>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="persistent check"
  id="test_persistent_nosuid_tmp" version="1">
    <ind:object object_ref="object_persistent_nosuid_tmp" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_persistent_nosuid_tmp" version="1">
    <ind:filepath>/etc/fstab</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*/tmp[\s]+.*nosuid.*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
