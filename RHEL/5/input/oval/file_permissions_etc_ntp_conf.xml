<def-group>
  <definition class="compliance" id="file_permissions_etc_ntp_conf" version="1">
    <metadata>
      <title>File /etc/ntp.conf Permissions</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>File permissions for /etc/ntp.conf must be 0640.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_permissions_etc_ntp_conf" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing /etc/ntp.conf permissions" id="test_file_permissions_etc_ntp_conf" version="1">
    <unix:object object_ref="object_file_permissions_etc_ntp_conf" />
    <unix:state state_ref="state_file_permissions_etc_ntp_conf" />
  </unix:file_test>

  <unix:file_object comment="/etc/ntp.conf" id="object_file_permissions_etc_ntp_conf" version="1">
    <unix:filepath>/etc/ntp.conf</unix:filepath>
  </unix:file_object>

  <unix:file_state id="state_file_permissions_etc_ntp_conf" version="1">
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:oread datatype="boolean">false</unix:oread>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
</def-group>
