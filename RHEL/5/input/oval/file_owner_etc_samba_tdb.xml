<def-group>
  <definition class="compliance" id="file_owner_etc_samba_tdb" version="1">
    <metadata>
      <title>Files /etc/samba/passdb.tdb /etc/samba/secrets.tdb Owner</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>Owner for /etc/samba/passdb.tdb and /etc/samba/secrets.tdb must be root.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_owner_etc_samba_passdb_tdb" />
      <criterion test_ref="test_file_owner_etc_samba_secrets_tdb" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing /etc/samba/passdb.tdb owner" id="test_file_owner_etc_samba_passdb_tdb" version="1">
    <unix:object object_ref="object_file_owner_etc_samba_passdb_tdb" />
    <unix:state state_ref="state_file_owner_etc_samba_tdb" />
  </unix:file_test>
  <unix:file_object comment="/etc/samba/passdb.tdb" id="object_file_owner_etc_samba_passdb_tdb" version="1">
    <unix:filepath>/etc/samba/passdb.tdb</unix:filepath>
  </unix:file_object>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing /etc/samba/secrets.tdb owner" id="test_file_owner_etc_samba_secrets_tdb" version="1">
    <unix:object object_ref="object_file_owner_etc_samba_secrets_tdb" />
    <unix:state state_ref="state_file_owner_etc_samba_tdb" />
  </unix:file_test>
  <unix:file_object comment="/etc/samba/secrets.tdb" id="object_file_owner_etc_samba_secrets_tdb" version="1">
    <unix:filepath>/etc/samba/secrets.tdb</unix:filepath>
  </unix:file_object>

  <unix:file_state id="state_file_owner_etc_samba_tdb" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
</def-group>
