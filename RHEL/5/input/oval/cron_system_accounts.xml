<def-group>
  <definition class="compliance" id="cron_system_accounts" version="1">
    <metadata>
      <title>Files /etc/cron.allow And /etc/cron.deny Must Exist</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>Group owner for /etc/cron.allow and /etc/cron.deny must exist.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_cron_system_accounts_cron_allow_exists" />
      <criterion test_ref="test_cron_system_accounts_cron_allow" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="Testing /etc/cron.allow existence" id="test_cron_system_accounts_cron_allow_exists" version="1">
    <unix:object object_ref="object_cron_system_accounts_cron_allow_exists" />
  </unix:file_test>
  <unix:file_object comment="/etc/cron.allow" id="object_cron_system_accounts_cron_allow_exists" version="1">
    <unix:filepath>/etc/cron.allow</unix:filepath>
  </unix:file_object>

  <local_variable id="var_cron_system_accounts_allow_list" comment="Accounts Allowed" datatype="string" version="1">
	<object_component item_field="subexpression" object_ref="object_cron_system_accounts_allow_list" />
  </local_variable>
  <ind:textfilecontent54_object comment="/etc/cron.allow" id="object_cron_system_accounts_allow_list" version="1">
    <ind:filepath>/etc/cron.allow</ind:filepath>
    <ind:pattern operation="pattern match">^(.*)$</ind:pattern>
    <ind:instance operation="greater than or equal" datatype="int">0</ind:instance>
  </ind:textfilecontent54_object>

  <unix:password_test check="all" check_existence="none_exist" comment="Testing system accounts in /etc/cron.allow" id="test_cron_system_accounts_cron_allow" version="1">
    <unix:object object_ref="object_cron_system_accounts_cron_allow" />
  </unix:password_test>
  <unix:password_object id="object_cron_system_accounts_cron_allow" version="1">
    <unix:username operation="equals" var_ref="var_cron_system_accounts_allow_list" var_check="at least one" datatype="string" />
    <filter action="include">state_cron_system_accounts_cron_allow_root</filter>
    <filter action="include">state_cron_system_accounts_cron_allow_uid</filter>
  </unix:password_object>
  <unix:password_state id="state_cron_system_accounts_cron_allow_root" version="1">
    <unix:username operation="not equal">root</unix:username>
  </unix:password_state>
  <unix:password_state id="state_cron_system_accounts_cron_allow_uid" version="1">
    <unix:user_id datatype="int" operation="less than">500</unix:user_id>
  </unix:password_state>

</def-group>
