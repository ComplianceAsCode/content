<def-group>
  <definition class="compliance" id="file_owner_etc_skel" version="1">
    <metadata>
      <title>File /etc/skel/* Owner</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>Owner for /etc/skel/* must be root.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_owner_etc_skel" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing /etc/skel/* owner" id="test_file_owner_etc_skel" version="1">
    <unix:object object_ref="object_file_owner_etc_skel" />
    <unix:state state_ref="state_file_owner_etc_skel" />
  </unix:file_test>

  <unix:file_object comment="/etc/skel/*" id="object_file_owner_etc_skel" version="1">
    <unix:path>/etc/skel</unix:path>
    <unix:filename operation="pattern match">.*</unix:filename>
  </unix:file_object>

  <unix:file_state id="state_file_owner_etc_skel" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
</def-group>
