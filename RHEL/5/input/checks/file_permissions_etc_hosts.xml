<def-group>
  <definition class="compliance" id="file_permissions_etc_hosts" version="1">
    <metadata>
      <title>File /etc/hosts Permissions</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>File permissions for /etc/hosts must be 0644.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_permissions_etc_hosts" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing /etc/hosts permissions" id="test_file_permissions_etc_hosts" version="1">
    <unix:object object_ref="object_file_permissions_etc_hosts" />
    <unix:state state_ref="state_file_permissions_etc_hosts" />
  </unix:file_test>

  <unix:file_object comment="/etc/hosts" id="object_file_permissions_etc_hosts" version="1">
    <unix:filepath>/etc/hosts</unix:filepath>
  </unix:file_object>

  <unix:file_state id="state_file_permissions_etc_hosts" version="1">
    <unix:uexec datatype="boolean">false</unix:uexec>
    <unix:gwrite datatype="boolean">false</unix:gwrite>
    <unix:gexec datatype="boolean">false</unix:gexec>
    <unix:owrite datatype="boolean">false</unix:owrite>
    <unix:oexec datatype="boolean">false</unix:oexec>
  </unix:file_state>
</def-group>
