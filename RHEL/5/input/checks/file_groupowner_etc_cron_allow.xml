<def-group>
  <definition class="compliance" id="file_groupowner_etc_cron_allow" version="1">
    <metadata>
      <title>File /etc/cron.allow Group Owner</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>Group owner for /etc/cron.allow must be root.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_groupowner_etc_cron_allow" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing /etc/cron.allow group owner" id="test_file_groupowner_etc_cron_allow" version="1">
    <unix:object object_ref="object_file_groupowner_etc_cron_allow" />
    <unix:state state_ref="state_file_groupowner_etc_cron_allow" />
  </unix:file_test>

  <unix:file_object comment="/etc/cron.allow" id="object_file_groupowner_etc_cron_allow" version="1">
    <unix:filepath>/etc/cron.allow</unix:filepath>
  </unix:file_object>

  <unix:file_state id="state_file_groupowner_etc_cron_allow" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
</def-group>
