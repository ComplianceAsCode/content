  </unix:file_object>
  
  <unix:file_test check="all" check_existence="any_exist" comment="Testing owner of /etc/suid_profile" id="test_file_owner_etc_suid_profile" version="1">
    <unix:object object_ref="object_file_owner_etc_suid_profile" />
    <unix:state state_ref="state_file_owner_global_initialization_files" />
  </unix:file_test>
  <unix:file_object comment="/etc/suid_profile" id="object_file_owner_etc_suid_profile" version="1">
    <unix:filepath>/etc/suid_profile</unix:filepath>
  </unix:file_object>
  
  <unix:file_test check="all" check_existence="any_exist" comment="Testing owner of /etc/profile.d/*" id="test_file_owner_etc_profiled" version="1">
    <unix:object object_ref="object_file_owner_etc_profiled" />
    <unix:state state_ref="state_file_owner_global_initialization_files" />
  </unix:file_test>
  <unix:file_object comment="/etc/profile.d/*" id="object_file_owner_etc_profiled" version="1">
    <unix:path>/etc/profile.d</unix:path>
    <unix:filename operation="pattern match">.*</unix:filename>
  </unix:file_object>
  
  <unix:file_state id="state_file_owner_global_initialization_files" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
</def-group>
