<def-group>
  <definition class="compliance" id="file_owner_local_initialization_files" version="1">
    <metadata>
      <title>Local Initialization Files Owner</title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>Owner for local initialization files must be root.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_file_owner_local_initialization_files_home" />
      <criterion test_ref="test_file_owner_local_initialization_files_root" />
    </criteria>
  </definition>

  <local_variable id="var_file_owner_local_initialization_files_group_list_home" comment="User Accounts" datatype="int" version="1">
	<object_component item_field="user_id" object_ref="object_file_owner_local_initialization_files_path_list_home" />
  </local_variable>
  <local_variable id="var_file_owner_local_initialization_files_path_list_home" comment="User Home Directories" datatype="string" version="1">
	<object_component item_field="home_dir" object_ref="object_file_owner_local_initialization_files_path_list_home" />
  </local_variable>
  <unix:password_object id="object_file_owner_local_initialization_files_path_list_home" version="1">
    <unix:username operation="pattern match">^.*$</unix:username>
    <filter action="include">state_file_owner_local_initialization_files_path_group_home</filter>
    <filter action="exclude">state_file_owner_local_initialization_files_path_nfs_group_home</filter>
  </unix:password_object>
  <unix:password_state id="state_file_owner_local_initialization_files_path_group_home" version="1">
    <unix:user_id datatype="int" operation="greater than or equal">500</unix:user_id>
  </unix:password_state>
  <unix:password_state id="state_file_owner_local_initialization_files_path_nfs_group_home" version="1">
    <unix:username datatype="string" operation="equals">nfsnobody</unix:username>
  </unix:password_state>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing local initialization files - /home owner" id="test_file_owner_local_initialization_files_home" version="1">
    <unix:object object_ref="object_file_owner_local_initialization_files_home" />
    <unix:state state_ref="state_file_owner_local_initialization_files_home" />
  </unix:file_test>
  <unix:file_object comment="local initialization files - /home" id="object_file_owner_local_initialization_files_home" version="1">
    <unix:behaviors recurse="symlinks and directories" recurse_direction="down" max_depth="1" recurse_file_system="local" />
    <unix:path  operation="equals" var_ref="var_file_owner_local_initialization_files_path_list_home" var_check="at least one" datatype="string" />
    <unix:filename operation="pattern match">^(\.bashrc|\.bash_login|\.bash_logout|\.bash_profile|\.cshrc|\.kshrc|\.login|\.logout|\.profile|\.env|\.dtprofile|\.dispatch|\.emacs|\.exrc)$</unix:filename>
    <filter action="exclude">state_file_owner_local_initialization_files_symlink</filter>
  </unix:file_object>
  <unix:file_state id="state_file_owner_local_initialization_files_home" version="1">
    <unix:user_id operation="equals" var_ref="var_file_owner_local_initialization_files_group_list_home"  var_check="only one" datatype="int"/>
  </unix:file_state>

  <local_variable id="var_file_owner_local_initialization_files_path_list_root" comment="group Accounts" datatype="string" version="1">
	<object_component item_field="home_dir" object_ref="object_file_owner_local_initialization_files_path_list_root" />
  </local_variable>
  <unix:password_object id="object_file_owner_local_initialization_files_path_list_root" version="1">
    <unix:username>root</unix:username>
  </unix:password_object>

  <unix:file_test check="all" check_existence="any_exist" comment="Testing local initialization files - /root owner" id="test_file_owner_local_initialization_files_root" version="1">
    <unix:object object_ref="object_file_owner_local_initialization_files_root" />
    <unix:state state_ref="state_file_owner_local_initialization_files_root" />
  </unix:file_test>
  <unix:file_object comment="local initialization files - /root" id="object_file_owner_local_initialization_files_root" version="1">
    <unix:behaviors recurse="symlinks and directories" recurse_direction="down" max_depth="1" recurse_file_system="local" />
    <unix:path operation="equals" var_ref="var_file_owner_local_initialization_files_path_list_root" var_check="at least one" datatype="string" />
    <unix:filename operation="pattern match">^(\.bashrc|\.bash_login|\.bash_logout|\.bash_profile|\.cshrc|\.kshrc|\.login|\.logout|\.profile|\.env|\.dtprofile|\.dispatch|\.emacs|\.exrc)$</unix:filename>
    <filter action="exclude">state_file_owner_local_initialization_files_symlink</filter>
  </unix:file_object>
  <unix:file_state id="state_file_owner_local_initialization_files_root" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>

  <unix:file_state id="state_file_owner_local_initialization_files_symlink" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>

</def-group>
