<def-group>
  <definition class="compliance" id="file_owner_grub_conf" version="1">
    <metadata>
      <title>File grub.conf Owned By root Group </title>
      <affected family="unix">
        <platform>CentOS 4</platform>
		<platform>CentOS 5</platform>
		<platform>Red Hat Enterprise Linux 4</platform>
		<platform>Red Hat Enterprise Linux 5</platform>
      </affected>
      <description>The grub.conf file should be owned by the root user. By default, this file is located at /boot/grub/grub.conf.</description>
    </metadata>
    <criteria operator="OR">
      <criterion test_ref="test_file_owner_grub_conf" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/boot/grub/grub.conf owned by root" id="test_file_owner_grub_conf" version="1">
    <unix:object object_ref="object_file_owner_grub_conf" />
    <unix:state state_ref="state_file_owner_grub_conf" />
  </unix:file_test>
  <unix:file_object comment="/boot/grub/grub.conf" id="object_file_owner_grub_conf" version="1">
    <unix:filepath>/boot/grub/grub.conf</unix:filepath>
  </unix:file_object>
  <unix:file_state id="state_file_owner_grub_conf" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
</def-group>
